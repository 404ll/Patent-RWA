{
  "name": "biopharma-patent-rwa",
  "version": "1.0.0",
  "description": "基于以太坊的生物医药专利真实世界资产(RWA)代币化平台",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "gas-reporter": "hardhat test --gas-reporter",
    "deploy:localhost": "hardhat run scripts/deploy-guidecoin.js --network localhost",
    "deploy:goerli": "hardhat run scripts/deploy-guidecoin.js --network goerli",
    "deploy:sepolia": "hardhat run scripts/deploy-guidecoin.js --network sepolia",
    "deploy:mainnet": "hardhat run scripts/deploy-guidecoin.js --network mainnet",
    "upgrade:localhost": "hardhat run scripts/upgrade-guidecoin.js --network localhost",
    "upgrade:goerli": "hardhat run scripts/upgrade-guidecoin.js --network goerli",
    "node": "hardhat node",
    "clean": "hardhat clean",
    "verify": "hardhat verify",
    "frontend:install": "cd frontend && npm install",
    "frontend:start": "cd frontend && npm start",
    "frontend:build": "cd frontend && npm run build",
    "dev": "concurrently \"npm run node\" \"npm run frontend:start\"",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "rwa",
    "patent",
    "defi",
    "dao",
    "erc20",
    "ipfs",
    "chainlink"
  ],
  "author": "BioPharma RWA Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^1.0.0",
    "@openzeppelin/hardhat-upgrades": "^2.0.0",
    "@typechain/ethers-v6": "^0.4.0",
    "@typechain/hardhat": "^8.0.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "chai": "^4.2.0",
    "concurrently": "^8.2.0",
    "ethers": "^6.4.0",
    "hardhat": "^2.17.1",
    "hardhat-gas-reporter": "^1.0.8",
    "solhint": "^4.0.0",
    "solidity-coverage": "^0.8.1",
    "ts-node": ">=8.0.0",
    "typechain": "^8.3.0",
    "typescript": ">=4.5.0"
  },
  "overrides": {
    "@openzeppelin/hardhat-upgrades": {
      "@nomiclabs/hardhat-ethers": "npm:@nomicfoundation/hardhat-ethers@^3.0.0"
    }
  },
  "dependencies": {
    "@chainlink/contracts": "^0.8.0",
    "@openzeppelin/contracts": "^4.9.0",
    "@openzeppelin/contracts-upgradeable": "^4.9.0",
    "dotenv": "^16.3.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/biopharma-patent-rwa.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/biopharma-patent-rwa/issues"
  },
  "homepage": "https://github.com/your-org/biopharma-patent-rwa#readme"
}